pipeline {
    agent any
    tools {
        maven 'maven_3.5.3'
        jdk 'JAVA_10.0.1'
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test cobertura:cobertura -Dcobertura.report.format=xml'
            }
            post {
                success {
                    junit 'target/surefire-reports/*.xml'
                    cobertura coberturaReportFile: '**/target/site/cobertura/coverage.xml'
                }
            }
        }
    }
}
