pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat label: 'TestMagic', script: 'D:\\GTSData\\BackUp\\Jenkins\\UTS\\JarFile\\TMJenkinsPlugin>java -jar TMJenkinsPlugin.jar Sample Sample JenkinsTest'
}
           }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
