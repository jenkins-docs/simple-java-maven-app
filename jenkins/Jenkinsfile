pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.9.2'
                    args '-v ./.m2/:./.m2'
                }
            }            
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'maven:3.9.2'
                    args '-u root -v ./.m2/:/root/.m2'
                }
            }
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Artifact') {
            agent {
                docker {
                    image 'maven:3.9.2'
                    args '-u root -v ./.m2/:/root/.m2'
                }
            }
            steps {
                archiveArtifacts artifacts: 'target/*.jar'
            }
        }
        stage('Deliver') {
            agent {
                docker {
                    image 'maven:3.9.2'
                    args '-u root -v ./.m2/:/root/.m2'
                }
            }
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
