pipeline {
    agent any
    stages {
        stage('display hostname') {
            steps {
                sh "hostname"
            }
        }

        stage('display OS version') {
            steps {
               sh "cat /etc/os-release"
            }
        }
        
    }
    post{
            success{
                echo "Job succeeded"
            }
            failure{
                echo "Jib failed"
            }
        }
}
